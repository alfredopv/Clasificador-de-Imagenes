<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alfredo.nutritionapp.SignUpActivity"
    android:background="@color/black">

    <EditText
        android:id="@+id/PassEditTextCreate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/createUserBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:background="@color/gray"
        android:textColorHint="@color/white"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.62" />

    <EditText
        android:id="@+id/emailEditTextCreate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/PassEditTextCreate"
        android:layout_alignLeft="@+id/PassEditTextCreate"
        android:layout_alignStart="@+id/PassEditTextCreate"
        android:layout_marginBottom="73dp"
        android:background="@color/gray"
        android:textColorHint="@color/white"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/createUserBtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:background="@color/gray"
        android:onClick="clickLogin"
        android:text="REGISTRAR"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.811"
        tools:text="REGISTRAR" />

</RelativeLayout>
